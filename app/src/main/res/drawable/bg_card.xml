<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the card -->
    <solid android:color="#F5F5F5" /> <!-- Light gray color -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Optional padding inside the card -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />

    <!-- Optional shadow or elevation (won't work directly in XML but can be done programmatically) -->
</shape>
